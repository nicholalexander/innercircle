.container

  .photobox
    %img(src="#{@photo.image.url(:medium)}")
    .details
      .title
        %h1 title:
        %h2
          = @photo.title
        
      .description    
        %h1 description:
        %h2 
          = @photo.description

  .commentsbox      
    

    .comments-read
      %h1 These are all the comments on this photo:

      / - @photo.comments.each do |comment|
      /   %h3
      /     = current_user.name
      /     = comment.text
      /     = comment.created_at

    .comments-add
      %h1 Make your comments here:

      = simple_form_for @new_comment, {url: photo_comments_path(@photo.id), defaults: { input_html: {class: "commentform"}} } do |f|
        = f.input :text
        = hidden_field_tag :photo_id, @photo.id
        = f.submit

    / .comments
    /   %h1 eofjieof
  
